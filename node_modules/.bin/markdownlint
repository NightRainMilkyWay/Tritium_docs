#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/data/data/com.termux/files/home/yz/node_modules/.pnpm/markdownlint-cli@0.37.0/node_modules/markdownlint-cli/node_modules:/data/data/com.termux/files/home/yz/node_modules/.pnpm/markdownlint-cli@0.37.0/node_modules:/data/data/com.termux/files/home/yz/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/data/data/com.termux/files/home/yz/node_modules/.pnpm/markdownlint-cli@0.37.0/node_modules/markdownlint-cli/node_modules:/data/data/com.termux/files/home/yz/node_modules/.pnpm/markdownlint-cli@0.37.0/node_modules:/data/data/com.termux/files/home/yz/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../markdownlint-cli/markdownlint.js" "$@"
else
  exec node  "$basedir/../markdownlint-cli/markdownlint.js" "$@"
fi
